<%= form_for @belts do |f| %>
    <%= f.label :belt_name %>
    <%= f.text_field :belt_name %>
    <%= f.label :tier %>
    <%= f.text_field :tier %><br>
        <%= f.fields_for :pokemon do |p| %>
        <%= p.hidden_field :id %>
        <%= p.label :pokemon_name %>
        <%= p.text_field :name %>
        <%= p.label :pokemon_type %>
        <%= p.text_field :pokemon_type %>
        <% end %>
<%= f.submit %>
<% end %>
<%= button_to "Home", trainer_path(current_trainer), method: :get %>
